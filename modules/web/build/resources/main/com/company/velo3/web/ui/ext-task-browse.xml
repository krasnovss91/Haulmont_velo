<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        class="com.company.velo3.web.ui.ExtTaskBrowser"
        extends="com/haulmont/thesis/web/ui/task/task-browse.xml"
        messagesPack="com.company.velo3.web.ui">
    <dsContext>
        <groupDatasource id="cardsDs" class="com.company.velo3.entity.ExTask"
        view="exTask-view"> <!--что если сюда запрос с деталями -->
            <query>
                <![CDATA[select e from velo3$VeloDetail e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <layout>
        <vbox id="mainLayout">
            <split id="split">
                <vbox id="table-panel">
                    <groupTable>
                        <actions>
                            <action id="excel"></action>
                            <action id="refresh"></action>
                        </actions>
                        <!--Cannot get unfetched attribute [veloDetail] from detached object  -->
                        <columns>
                            <column id="amount" caption="msg://amount"></column>
                            <column id="veloDetail" caption="msg://veloDetail"></column>
                            <column id="totalCost" caption="msg://totalCost"></column>
                        </columns>
                        <rows datasource="cardsDs"/>
                    </groupTable>
                </vbox>
            </split>
        </vbox>
    </layout>
</window>
