<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" class="com.company.velo3.web.ui.ExtTaskEditor"
        messagesPack="com.company.velo3.web.ui" xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        extends="com/haulmont/thesis/web/ui/task/task-edit.xml">
    <dsContext>
        <datasource id="cardDs" class="com.company.velo3.entity.ExTask" view="exTask-edit"/>
        <groupDatasource id="veloDetailsDs" class="com.company.velo3.entity.VeloDetail" view="_local">
            <query>
                <![CDATA[select e from velo3$VeloDetail e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <layout>
        <split id="split">
            <hbox id="mainPane">
                <tabSheet id="tabsheet">
                    <tab id="mainTab">
                        <groupBox id="taskInfoGroupBox"/>
                    </tab>
                </tabSheet>
                <vbox>
                    <scrollBox id="actionsFrameScroll" width="AUTO"/>
                </vbox>
            </hbox>
        </split>
        <groupTable height="100px" width="100%">
            <buttonsPanel>
                <button id="add"/>
                <button id ="exclude"/>
            </buttonsPanel>
            <rows datasource="veloDetailsDs"/>
        </groupTable>
    </layout>
</window>
