<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        class="com.company.velo3.web.ui.ExtTaskEditor"
        extends="com/haulmont/thesis/web/ui/task/task-edit.xml"
        messagesPack="com.company.velo3.web.ui">
    <dsContext>
        <datasource id="cardsDs" class="com.company.velo3.entity.ExTask"/>
        <collectionDatasource id="veloDetailsDs" class="com.company.velo3.entity.VeloDetail" view="_minimal">
            <query>
                <![CDATA[select e from velo3$VeloDetail e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="split">
        <split id="split" orientation="vertical" pos="70" width="100%">
            <hbox id="mainPane" expand="tabsheet" height="100%" width="100%">
                <tabSheet id="tabsheet" height="100%">
                    <tab id="mainTab" caption="msg://mainTab">
                        <groupBox id="taskInfoGroupBox" stylename="edit-area" expand="infoScrollBox"
                                  height="100%" width="100%">
                            <scrollBox id="infoScrollBox" scrollBars="both" margin="true">
                                <vbox id="infoVBox" width="AUTO">
                                    <grid id="rolesInfoGrid" margin="false,false,true,false" align="TOP_CENTER"
                                          stylename="only-horizontal-spacing" spacing="true">
                                    <!--    <columns></columns> -->
                                        <rows>
                                            <row>
                                                <label id="veloDetailLabel" value="msg://veloDetail"/>
                                                <lookupPickerField id="veloDetail" datasource="cardDs"
                                                                   optionsDatasource="veloDetailsDs"
                                                                   property="veloDetail" width="250px"/>
                                            </row>
                                        </rows>
                                    </grid>
                                </vbox>
                            </scrollBox>
                        </groupBox>
                    </tab>
                </tabSheet>
            </hbox>
        </split>

    </layout>
</window>
